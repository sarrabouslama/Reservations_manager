{% extends 'base.html.twig' %}

{% block title %}Bienvenue Amicale CNSS{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: linear-gradient(135deg, #e0e7ff 0%, #fff 100%);
    }
    .feature-section {
        padding: 3rem 0;
    }
    .feature-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        transition: transform 0.2s, box-shadow 0.2s;
        padding: 2.5rem 1.5rem 2rem 1.5rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
        position: relative;
        overflow: hidden;
    }
    .feature-card:hover {
        transform: translateY(-10px) scale(1.04);
        box-shadow: 0 12px 36px rgba(0,0,0,0.18);
        border-color: #6366f1;
    }
    .feature-card img {
        width: 140px;
        height: 140px;
        object-fit: contain;
        margin-bottom: 1.2rem;
        filter: drop-shadow(0 2px 8px rgba(99,102,241,0.08));
    }
    .feature-link {
        margin-top: 1.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        border-radius: 2rem;
        padding: 0.6rem 1.5rem;
        font-size: 1.1rem;
    }
    .feature-card .fa-link {
        margin-right: 0.5rem;
    }
    .feature-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #3730a3;
        margin-bottom: 0.5rem;
    }
    .feature-desc {
        color: #6b7280;
        font-size: 1rem;
        margin-bottom: 1rem;
    }
</style>
{% endblock %}

{% block body %}
