{% extends 'base.html.twig' %}

{% block title %}Bienvenue Amicale CNSS{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
    .feature-section {
        padding: 3rem 0;
    }
    .hero {
        background: url('{{ asset('images/logo.jpg') }}') center/cover;
        background-size: cover;
        color: white;
        border-radius: 1rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.2);
        width: 100%;
        height: 100%;
        min-height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 3rem;
    }
    .feature-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.10);
        transition: transform 0.2s, box-shadow 0.2s;
        padding: 2.5rem 1.5rem 2rem 1.5rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
        position: relative;
        overflow: hidden;
    }
    .feature-card:hover {
        transform: translateY(-10px) scale(1.04);
        box-shadow: 0 12px 36px rgba(0,0,0,0.18);
        border-color: #6366f1;
    }
    .feature-card img {
        width: 140px;
        height: 140px;
        object-fit: contain;
        margin-bottom: 1.2rem;
        filter: drop-shadow(0 2px 8px rgba(99,102,241,0.08));
    }
    .feature-link {
        margin-top: 1.5rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        border-radius: 2rem;
        padding: 0.6rem 1.5rem;
        font-size: 1.1rem;
    }
    .feature-card .fa-link {
        margin-right: 0.5rem;
    }
    .feature-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #3730a3;
        margin-bottom: 0.5rem;
    }
    .feature-desc {
        color: #6b7280;
        font-size: 1rem;
        margin-bottom: 1rem;
    }
</style>

{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="hero text-center">
    </section>
    <div class="container">
        <h1 class="display-4 mb-4 text-center">Bienvenue à l'Amicale CNSS</h1>

    </div>

    {# Features Section #}
    <section class="container my-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <a href="{{ path('app_home_index') }}" class="text-decoration-none text-reset">
                    <div class="feature-card h-100">
                        <i class="fas fa-house fa-4x text-primary"></i>
                        <h5 class="mt-3 mb-2">Maisons</h5>
                        <p>Consultez toutes les maisons disponibles pour vos vacances.</p>
                        <span class="btn btn-outline-primary feature-link">
                            <i class="fa-solid fa-link"></i> Voir toutes les maisons
                        </span>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('app_block_hotels') }}" class="text-decoration-none text-reset">
                    <div class="feature-card h-100">
                        <i class="fas fa-hotel fa-4x text-success"></i>
                        <h5 class="mt-3 mb-2">Hôtels</h5>
                        <p>Découvrez nos hôtels partenaires pour un séjour confortable.</p>
                        <span class="btn btn-outline-success feature-link">
                            <i class="fa-solid fa-link"></i> Voir tous les hôtels
                        </span>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="#" class="text-decoration-none text-reset">
                    <div class="feature-card h-100">
                        <i class="fas fa-person-swimming fa-4x text-warning"></i>
                        <h5 class="mt-3 mb-2">Accès piscine</h5>
                        <p>Découvrez nos accès piscine pour une journée inoubliable.</p>
                        <span class="btn btn-outline-warning feature-link">
                            <i class="fa-solid fa-link"></i> Voir Accès piscine
                        </span>
                    </div>
                </a>
            </div>
        </div>
    </section>
{% endblock %}