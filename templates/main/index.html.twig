{% extends 'base.html.twig' %}

{% block title %}Bienvenue Amicale CNSS{% endblock %}

{% block stylesheets %}
<style>
    .hero {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('{{ asset('images/logo.jpg') }}') center/cover;
        background-size: cover;
        color: white;
        border-radius: 1rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.2);
        width: 100%;
        height: 100%;
        min-height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 3rem;
    }
    .feature-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        transition: transform 0.2s, box-shadow 0.2s;
        padding: 2rem 1rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .feature-card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
    }
    .feature-card i {
        margin-bottom: 1rem;
    }
    .feature-link {
        margin-top: 1rem;
    }
    
</style>
{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="hero text-center">
    </section>
    <div class="container">
        <h1 class="display-4 mb-4 text-center">Bienvenue à l'Amicale CNSS</h1>

    </div>

    {# Features Section #}
    <section class="container my-5">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-house fa-4x text-primary"></i>
                    <h5 class="mt-3 mb-2">Maisons</h5>
                    <p>Consultez toutes les maisons disponibles pour vos vacances.</p>
                    <a href="{{ path('app_home_index') }}" class="btn btn-outline-primary feature-link">
                        <i class="fa-solid fa-link"></i> Voir toutes les maisons
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-hotel fa-4x text-success"></i>
                    <h5 class="mt-3 mb-2">Hôtels</h5>
                    <p>Découvrez nos hôtels partenaires pour un séjour confortable.</p>
                    <a href="https://tn.tunisiebooking.com/" class="btn btn-outline-success feature-link">
                        <i class="fa-solid fa-link"></i> Voir tous les hôtels
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-person-swimming fa-4x text-warning"></i>
                    <h5 class="mt-3 mb-2">Accès piscine</h5>
                    <p>Découvrez nos accès piscine pour une journée inoubliable.</p>
                    <a href="https://tn.tunisiebooking.com/" class="btn btn-outline-warning feature-link">
                        <i class="fa-solid fa-link"></i> Voir Accès piscine
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}